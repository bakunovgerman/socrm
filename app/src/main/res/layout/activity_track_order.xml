<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical"
    tools:context=".TrackOrderActivity">
    <include layout="@layout/toolbar_track_order" android:id="@+id/toolbar_actionbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="100dp"
                        android:src="@drawable/ic_cdek_logo"
                        android:layout_height="70dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="41dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="10dp"
                        android:elevation="50dp"
                        android:layout_height="40dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_russia_flag"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Дней в пути"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/purple_500"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="11"/>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Вес, кг"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:cardCornerRadius="10dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:background="@color/red_my"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="0.5"/>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Ориент. дата доставки"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="11.06.2021"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Срок хранения"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="26.06.2021"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Получатель"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Б.Г.А."/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Откуда"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Санкт-Петербург"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/gray_hint_text"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Адресовано"/>
                    <TextView
                        android:layout_width="220dp"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Новосибирск, мрн Горский, 53"/>
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>